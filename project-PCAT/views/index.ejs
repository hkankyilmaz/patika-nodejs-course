<%- include('partials/_header') -%>
  <body>
    <div class="tm-page-wrap mx-auto">
      <div class="position-relative headerX">
        <%- include('partials/_navigation') -%>
        <div class="tm-welcome-container text-center text-white">
          <div class="tm-welcome-container-inner">
            <p class="tm-welcome-text mb-1 text-white">
              Video Catalog is brought to you by TemplateMo.
            </p>
            <p class="tm-welcome-text mb-5 text-white">
              This is a full-width video banner.
            </p>
            <a
              href="#content"
              class="btn tm-btn-animate tm-btn-cta tm-icon-down"
            >
              <span>Discover</span>
            </a>
          </div>
        </div>

        <div id="tm-video-container">
          <video autoplay muted loop id="tm-video">
            <!-- <source src="video/sunset-timelapse-video.mp4" type="video/mp4"> -->
            <source src="video/wheat-field.mp4" type="video/mp4" />
          </video>
        </div>

        <i id="tm-video-control-button" class="fas fa-pause"></i>
      </div>

      <div class="container-fluid">
        <div id="content" class="mx-auto tm-content-container">
          <main>
            <div class="row">
              <div class="col-12">
                <h2 class="tm-page-title mb-4">Our Photo Catalog</h2>
               </div>
            </div>
            <div class="row tm-catalog-item-list">
              <% for(let i =0; i<photos.length; i++) { %>
              <div class="col-lg-4 col-md-6 col-sm-12 tm-catalog-item">
                <div class="position-relative tm-thumbnail-container">
                  <img
                    src="<%= photos[i].image%>"
                    alt="Image"
                    width='100%'
                    height='200'
                   />
                  <a
                    href= "/photos/<%= photos[i]._id %>""
                    class="position-absolute tm-img-overlay"
                  >
                    <i class="fas fa-search tm-overlay-icon"></i>
                  </a>
                </div>
                <div class="p-4 tm-bg-gray tm-catalog-item-description">
                  <h3 class="tm-text-primary mb-3 tm-catalog-item-title">
                    <%= photos[i].title %>
                  </h3>
                  <p class="tm-catalog-item-text">
                    <%= photos[i].description %>
                  </p>
                </div>
              </div>
             <% } %>
            </div>

            <!-- Catalog Paging Buttons -->
            <div>
              <% if (pages > 0) { %>
                <ul class="nav tm-paging-links">
                  <% for (i=1; i <=pages; i++) { %>
                    <%   if (i == current) { %>
                      <li class="nav-item active pagi"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                    <% } else if (i < pages) { %>
                      <li class="nav-item pagi"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                    <%  } else { %>
                      <li class="nav-item pagi"><a href="/?page=<%= i %>" class="nav-link tm-paging-link">></a></li>
                    <%  } %>
                  <%  } %>
                </ul>
              <% } %>
            </div>
          </main>
          <%- include('partials/_footer') -%>
    <script>
     
      document.querySelectorAll('.pagi').forEach((item)=> {
        const hed = document.querySelector('.headerX');
        item.addEventListener('click',(e)=> {
            
            heightElement = hed.offsetHeight;
            console.log(heightElement)
            window.scrollTo(0,heightElement);
            
        })
      })
  
    </script>
  </body>
</html>
